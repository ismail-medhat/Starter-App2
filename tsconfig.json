{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "tests": ["tests/*"],
      "@components": ["components", "components/*"],
      "@screens": ["screens", "screens/*"],
